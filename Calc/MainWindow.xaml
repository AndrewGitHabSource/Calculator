<Window x:Class="Calc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calc"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Calculate" HorizontalAlignment="Left" Height="52" Margin="10,236,0,0" VerticalAlignment="Top" Width="772" Click="Button_Click"/>
        <TextBox x:Name="textString" HorizontalAlignment="Left" Height="203" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="772" RenderTransformOrigin="0.5,0.5"/>
        <Label x:Name="resultOutput" Content="Result" HorizontalAlignment="Left" Margin="10,333,0,0" VerticalAlignment="Top" Width="772" Height="42"/>

    </Grid>
</Window>
